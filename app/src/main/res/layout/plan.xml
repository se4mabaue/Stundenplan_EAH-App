<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:id="@+id/nestedScrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorBackground">

                <TextView
                    android:id="@+id/plan_aktuelle_woche"
                    android:text="Woche 1-17"
                    android:textSize="25dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/plan_plan_datum"
                    android:text="88.88. - 88.88."
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>
            </TableRow>


            <TextView
                android:id="@+id/plan_Montag"
                android:text="  Montag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:background="@color/colorBackground" />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/plan_montag_start"
                    android:text="_start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/plan_montag_modul"
                    android:text="plan_montag_modul"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/plan_montag_ende"
                    android:text="_ende"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"/>
            </TableRow>

            <TextView
                android:id="@+id/plan_Dienstag"
                android:text="  Dienstag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:background="@color/colorBackground" />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/plan_dienstag_start"
                    android:text="_start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/plan_diensstag_modul"
                    android:text="plan_dienstag_modul"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/plan_dienstag_ende"
                    android:text="_ende"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"/>
            </TableRow>

            <TextView
                android:id="@+id/plan_Mittwoch"
                android:text="  Mittwoch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:background="@color/colorBackground" />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/plan_mittwoch_start"
                    android:text="_start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/plan_mittwoch_modul"
                    android:text="plan_mittwoch_modul"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/plan_mittwoch_ende"
                    android:text="_ende"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"/>
            </TableRow>


            <TextView
                android:id="@+id/plan_Donnerstag"
                android:text="  Donnerstag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:background="@color/colorBackground" />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/plan_donnerstag_start"
                    android:text="_start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/plan_donnerstag_modul"
                    android:text="plan_donnerstag_modul"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/plan_donnerstag_ende"
                    android:text="_ende"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"/>
            </TableRow>

            <TextView
                android:id="@+id/plan_Freitag"
                android:text="  Freitag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:background="@color/colorBackground" />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/plan_Freitag_start"
                    android:text="_start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/plan_freitag_modul"
                    android:text="plan_freitag_modul"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/plan_freitag_ende"
                    android:text="_ende"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"/>
            </TableRow>

            <TextView
                android:id="@+id/plan_Sonnabend"
                android:text="  Sonnabend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:background="@color/colorBackground" />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/plan_sonnabend_start"
                    android:text="_start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/plan_sonnabend_modul"
                    android:text="plan_sonnabend_modul"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/plan_sonnabend_ende"
                    android:text="_ende"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"/>

            </TableRow>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/arrow_left"
        android:id="@+id/plan_btn_woche_runter"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/arrow_right"
        android:id="@+id/plan_btn_woche_hoch"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:id="@+id/plan_button_abos"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

</android.support.design.widget.CoordinatorLayout>
